{
  "name": "sangariusss/slim-blog",
  "description": "A simple blog built on the Slim Framework with Blade templating and dependency injection.",
  "type": "project",
  "license": "MIT",
  "autoload": {
    "files": [
      "./app/helpers.php"
    ],
    "psr-4": {
      "Sangarius\\SlimBlog\\": "app/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.1",
    "slim/slim": "4.*",
    "guzzlehttp/psr7": "^2.6",
    "php-di/php-di": "^7.0",
    "jenssegers/blade": "^1.4",
    "ext-curl": "*",
    "ext-json": "*",
    "php-di/slim-bridge": "^3.4",
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public"
  }
}
